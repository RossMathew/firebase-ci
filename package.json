{
  "name": "firebase-ci",
  "version": "0.3.1",
  "description": "Simplified Firebase interaction for continuous integration including deploying hosting, functions, and database/storage rules.",
  "main": "lib/index.js",
  "bin": {
    "firebase-ci": "./bin/firebase-ci"
  },
  "files": [
    "src",
    "lib",
    "bin",
    "cmds"
  ],
  "scripts": {
    "clean": "rimraf lib coverage",
    "lint": "eslint src cmds bin test",
    "lint:fix": "npm run lint -- --fix",
    "test": "env-cmd ./tests/.env mocha -R spec --require babel-core/register ./tests/setup.js ./tests/**/*.spec.js",
    "test:cov": "env-cmd ./tests/.env istanbul cover ./node_modules/mocha/bin/_mocha -- ./tests/** --recursive --report lcov --require babel-core/register",
    "build:lib": "cross-env BABEL_ENV=commonjs babel src --out-dir lib",
    "build": "npm run clean && npm run build:lib",
    "watch": "npm run build:lib -- --stats --progress --colors --watch",
    "prepublish": "npm run clean && npm run test && npm run build",
    "prepush": "npm run lint:fix",
    "codecov": "cat coverage/*/lcov.info | codecov"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/prescottprue/firebase-ci.git"
  },
  "keywords": [
    "webpack",
    "firebase",
    "ci"
  ],
  "author": "prescottprue",
  "contributors": [
    {
      "name": "prescottprue",
      "email": "sprue.dev@gmail.com"
    }
  ],
  "npmName": "firebase-ci",
  "npmFileMap": [
    {
      "basePath": "/lib/",
      "files": [
        "*.js"
      ]
    }
  ],
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/prescottprue/firebase-ci/issues"
  },
  "homepage": "https://github.com/prescottprue/firebase-ci",
  "dependencies": {
    "autocmdr": "~0.0.8",
    "chalk": "^2.0.1",
    "child-process-promise": "^2.2.1",
    "lodash": "^4.17.4",
    "npm": "^5.3.0"
  },
  "devDependencies": {
    "babel-cli": "^6.26.0",
    "babel-core": "^6.26.0",
    "babel-eslint": "^8.0.1",
    "babel-plugin-add-module-exports": "^0.2.1",
    "babel-preset-env": "^1.6.0",
    "chai": "^3.5.0",
    "codecov": "^2.1.0",
    "cross-env": "^5.0.5",
    "env-cmd": "^5.0.0",
    "eslint": "^3.14.0",
    "eslint-config-standard": "^10.2.1",
    "eslint-plugin-babel": "^4.1.1",
    "eslint-plugin-import": "^2.7.0",
    "eslint-plugin-node": "^5.1.1",
    "eslint-plugin-promise": "^3.5.0",
    "eslint-plugin-standard": "^3.0.1",
    "husky": "^0.14.3",
    "istanbul": "^1.1.0-alpha.1",
    "mocha": "^3.2.0",
    "rimraf": "^2.5.4"
  }
}
